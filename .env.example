# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# Project Directories
PROJECTS_DIR=/var/www/projects
PORT_MAP_FILE=/var/www/port-map.json
UPLOADS_DIR=uploads/

# Port Allocation
BASE_PORT=4000

# Build Configuration
BUILD_MEMORY_LIMIT=512m
BUILD_CPU_LIMIT=0.5
BUILD_TIMEOUT=1200000
MAX_CONCURRENT_BUILDS=1
NODE_MODULES_MAX_AGE=7
CLEANUP_INTERVAL=3600000

# Step Timeouts (milliseconds)
BUILD_STEP_TIMEOUT=1200000
TEST_STEP_TIMEOUT=300000
DEFAULT_STEP_TIMEOUT=300000

# Skip tests for faster deployment (set to true in production if needed)
SKIP_TESTS=false

# Docker Build Limits
DOCKER_BUILD_MEMORY=512m
DOCKER_BUILD_CPUS=0.5

# Pipeline Configuration
MAX_CONCURRENT_PIPELINES=1
STATUS_RETENTION_HOURS=24

# Deployment State
DEPLOYMENT_PENDING_TIMEOUT=1800000

# Domain Configuration
BASE_DOMAIN=zyphron.space
