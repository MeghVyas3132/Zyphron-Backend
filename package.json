{
  "name": "zyphron-backend",
  "version": "1.0.0",
  "description": "Zyphron - Next-Generation Universal Deployment Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "worker:dev": "tsx watch src/workers/index.ts",
    "worker:start": "node dist/workers/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker-compose -f docker-compose.dev.yml build",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/websocket": "^9.0.0",
    "@prisma/client": "^5.9.0",
    "bullmq": "^5.1.0",
    "dockerode": "^4.0.2",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "nanoid": "^5.0.5",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "simple-git": "^3.22.0",
    "tar": "^6.2.0",
    "unzipper": "^0.10.14",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/node": "^20.11.10",
    "@types/tar": "^6.1.11",
    "@types/unzipper": "^0.10.9",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "prisma": "^5.9.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "deployment",
    "platform",
    "docker",
    "kubernetes",
    "ci-cd",
    "devops",
    "paas"
  ],
  "author": "Zyphron Team",
  "license": "MIT"
}
